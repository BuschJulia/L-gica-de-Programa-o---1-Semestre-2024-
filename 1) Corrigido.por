programa {
  funcao inicio() {
    /*1) Criar um programa que receba o nome, idade e endereço de uma pessoa e mostre na tela esses dados.*/
     
     cadeia NomeUsuario
     inteiro IdadeUsuario
     cadeia Rua  

escreva ("Digite o seu nome: ")
leia (NomeUsuario)

escreva ("Digite a sua idade: ")
leia (IdadeUsuario)

escreva ("Rua: ")
leia (Rua)

escreva ("\nNome digitado: "NomeUsuario , "\n")
escreva ("\nIdade digitado: "IdadeUsuario, "\n")
escreva ("\n Endereço digitado" Rua)

  }
}
