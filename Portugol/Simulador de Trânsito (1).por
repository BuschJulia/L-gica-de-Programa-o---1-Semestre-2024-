programa {
  funcao inicio() {
  /*4) Simulador de trânsito: Crie um programa que pergunte a idade do usuário e, 
  se ele tiver idade suficiente para dirigir (por exemplo, 18 anos), exiba "Você pode
  dirigir"; caso contrário, exiba "Você ainda não pode dirigir".*/

  inteiro Idade

  //Entrada
  escreva ("Qual a sua idade? ")
  leia (Idade)

    se (Idade >= 18){
    escreva ("Você pode dirigir!")

    }senao {
      escreva ("Você ainda não pode dirigir!")
    }
  }
}
